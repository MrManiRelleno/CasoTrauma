@model EmergenciaModel

@{
    ViewData["Title"] = "CrearEmergencia";
}

<div class="container mt-5">
    <h2 class="text-center">Formulario de Emergencia</h2>

    <!-- Mostrar mensaje de éxito si se envió el formulario correctamente -->
    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-success text-center" role="alert">
            @ViewBag.Message
        </div>
    }

    <form asp-action="CrearEmergencia" method="post" class="mt-4">
        <div class="form-group">
            <label for="NumeroVictimas">Número de víctimas</label>
            <input type="number" name="NumeroVictimas" class="form-control" id="NumeroVictimas" value="@Model.NumeroVictimas" required>
        </div>
        
        <div class="form-group mt-3">
            <label for="Descripcion">Descripción</label>
            <textarea name="Descripcion" class="form-control" id="Descripcion" rows="4" required>@Model.Descripcion</textarea>
        </div>
        
        <div class="form-group mt-3">
            <label for="Fecha">Fecha</label>
            <input type="date" name="Fecha" class="form-control" id="Fecha" value="@Model.Fecha.ToString("yyyy-MM-dd")" required>
        </div>

        <button type="submit" class="btn btn-primary mt-4 w-100">Registrar Emergencia</button>
    </form>
</div>
